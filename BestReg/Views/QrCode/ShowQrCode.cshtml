@{
    ViewData["Title"] = "Show QR Code";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body text-center d-flex flex-column justify-content-between">
                    <div>
                        <h2 class="card-title">Your QR Code</h2>
                        @if (ViewBag.QrCodeBase64 != null)
                        {
                            <img src="data:image/png;base64,@ViewBag.QrCodeBase64" alt="QR Code" class="img-fluid mb-4" />
                        }
                        else
                        {
                            <p>No QR code available.</p>
                        }
                    </div>
                    <!-- Button centered at the bottom -->
                    <a href="@Url.Action("DownloadQrCode", "QrCode")" class="btn btn-primary mt-auto mx-auto">Download QR Code</a>
                </div>
            </div>
        </div>
    </div>
</div>
