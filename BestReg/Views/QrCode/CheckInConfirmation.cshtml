@model BestReg.Models.CheckInConfirmationViewModel

@{
    ViewData["Title"] = "Attendance Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center">Attendance Confirmation</h2>

                    @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
                    {
                        <div class="alert alert-success text-center">
                            @ViewBag.SuccessMessage
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.UserName</dd>

                        <dt class="col-sm-4">Time</dt>
                        <dd class="col-sm-8">@Model.CheckInTime.ToString("f")</dd>
                    </dl>

                    <a href="@Url.Action("ScanQrCode", "QrCode")" class="btn btn-primary w-100">Scan Another QR Code</a>
                </div>
            </div>
        </div>
    </div>
</div>
